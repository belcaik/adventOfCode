  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./day*/",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["day*/**/*"],
  "exclude": ["node_modules"]
}